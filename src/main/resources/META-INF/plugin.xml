<idea-plugin>
    <id>com.example.plugin</id>
    <name>My Plugin</name>
    <vendor email="your.email@example.com" url="https://www.example.com">Your Company</vendor>

    <description><![CDATA[
    This is a sample plugin that shows a "Hello, World!" message.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="MyAction" class="com.example.plugin.MyAction" text="Show Hello World" description="Shows a hello world message">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
